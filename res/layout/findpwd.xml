<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="-1" android:layout_height="-2">
    <RelativeLayout android:clickable="true" android:layout_width="-1" android:layout_height="-1"
        <RelativeLayout android:id="@id/top" style="@style/top_title">
            <Button android:textColor="@color/white" android:id="@id/returnBtn" android:background="@drawable/btn_back_selector" android:nextFocusUp="@id/find_mail" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="10dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
            <TextView android:textSize="25sp" android:textColor="@color/white" android:id="@id/tetle" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="10dp" android:text="@string/user_findPwd" android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/lay_selectport" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="-2" android:layout_height="-1" android:layout_below="@id/top" android:layout_centerInParent="true">
            <LinearLayout android:orientation="1" android:id="@id/findpwd_content" android:padding="2dp" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginRight="5dp">
                <TextView android:textColor="@color/white" android:gravity="11" android:id="@id/findpwd_ed" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="-2" android:layout_height="30dp" android:hint="@string/reg_serialno" android:singleLine="true" />
                <LinearLayout android:orientation="0" android:layout_width="-2" android:layout_height="50dp">
                    <EditText android:textColor="#000000" android:id="@id/verification_code" android:background="@drawable/modi_pwd_textbg" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="-2" android:layout_height="45dp" android:hint="@string/verification_code" android:singleLine="true" android:imeOptions="6" />
                    <Button android:textSize="15sp" android:textColor="@color/white" android:id="@id/send_verycode" android:background="@drawable/login_btn_login_selector" android:layout_width="200dp" android:layout_height="45dp" android:layout_marginLeft="10dp" android:text="@string/set_verify_get" />
                </LinearLayout>
                <EditText android:id="@id/new_pwd" android:background="@drawable/modi_pwd_textbg" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="-2" android:layout_height="40dp" android:layout_marginTop="10dp" android:hint="@string/new_pwd" android:singleLine="true" />
                <EditText android:id="@id/new_pwd_affirm" android:background="@drawable/modi_pwd_textbg" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="-2" android:layout_height="40dp" android:layout_marginTop="10dp" android:hint="@string/new_pwd_affirm" android:singleLine="true" />
            </LinearLayout>
            <RelativeLayout android:orientation="0" android:padding="2dp" android:layout_width="-1" android:layout_height="-2" android:layout_marginLeft="15dp" android:layout_marginTop="7dp" android:layout_marginRight="15dp" android:layout_below="@id/findpwd_content">
                <Button android:textSize="20sp" android:textColor="@color/white" android:id="@id/find_btn" android:background="@drawable/login_btn_login_selector" android:visibility="2" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="20dp" android:text="@string/find_btn" android:layout_weight="1.0" />
                <Button android:textSize="18sp" android:textColor="@color/white" android:id="@id/find_mail" android:background="@drawable/login_btn_login_selector" android:nextFocusDown="@id/returnBtn" android:layout_width="-2" android:layout_height="30dp" android:text="@string/Submit" android:layout_centerInParent="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
