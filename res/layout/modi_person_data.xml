<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="-1" android:layout_height="-2">
    <RelativeLayout android:clickable="true" android:layout_width="-1" android:layout_height="-1"
        <RelativeLayout android:id="@id/top" style="@style/top_title">
            <Button android:textColor="@color/white" android:id="@id/returnBtn" android:background="@drawable/btn_back_selector" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="10dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
            <TextView android:textSize="25sp" android:textColor="@color/white" android:id="@id/tetle" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="10dp" android:text="@string/modi_data" android:layout_centerInParent="true" />
        </RelativeLayout>
        <LinearLayout android:orientation="0" android:id="@id/setL" android:layout_below="@id/top" style="@style/user_person_data_item">
            <TextView android:text="@string/data_sex" style="@style/user_person_data_textview" />
            <RelativeLayout android:id="@id/account" android:background="@drawable/modi_pwd_textbg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="-1" android:hint="@string/data_sex" android:singleLine="true">
                <TextView android:textSize="18sp" android:id="@id/account_sex" android:layout_width="-2" android:layout_height="-2" android:hint="@string/data_sex" android:layout_centerVertical="true" />
                <RadioGroup android:gravity="10" android:orientation="0" android:id="@id/sexgroup" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="-1" android:checkedButton="@id/sex1" android:layout_toRightOf="@id/account_sex" android:layout_centerVertical="true">
                    <RadioButton android:textSize="18sp" android:textColor="@color/black" android:id="@id/sex1" android:layout_width="-2" android:layout_height="-1" android:checked="true" android:button="@drawable/sigle_checkbox" android:text="@string/data_sex1" />
                    <RadioButton android:textSize="18sp" android:textColor="@color/black" android:id="@id/sex2" android:layout_width="-2" android:layout_height="-1" android:button="@drawable/sigle_checkbox" android:text="@string/data_sex2" />
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:orientation="0" android:id="@id/accoutnL" android:layout_below="@id/setL" style="@style/user_person_data_item">
            <TextView android:text="@string/data_birth" style="@style/user_person_data_textview" />
            <TextView android:id="@id/account_name" android:hint="@string/data_birth" android:singleLine="true" android:phoneNumber="true" style="@style/user_person_data_paddingLeft_edittextsize" />
        </LinearLayout>
        <LinearLayout android:orientation="0" android:id="@id/pswL" android:layout_below="@id/accoutnL" style="@style/user_person_data_item">
            <TextView android:text="@string/phone" style="@style/user_person_data_textview" />
            <EditText android:id="@id/pwd" android:hint="@string/data_phone" android:singleLine="true" android:phoneNumber="true" style="@style/user_person_data_paddingLeft_edittextsize" />
        </LinearLayout>
        <LinearLayout android:orientation="0" android:id="@id/adressL" android:layout_below="@id/pswL" style="@style/user_person_data_item">
            <TextView android:text="@string/data_address" style="@style/user_person_data_textview" />
            <EditText android:id="@id/regpwd" android:hint="@string/data_address" android:singleLine="true" style="@style/user_person_data_paddingLeft_edittextsize" />
        </LinearLayout>
        <LinearLayout android:orientation="0" android:id="@id/emaillL" android:layout_below="@id/adressL" style="@style/user_person_data_item">
            <TextView android:text="@string/email" style="@style/user_person_data_textview" />
            <EditText android:id="@id/e_mail" android:hint="@string/data_email" style="@style/user_person_data_paddingLeft_edittextsize" />
        </LinearLayout>
        <Button android:id="@id/registerbtn" android:text="@string/data_btn" android:layout_below="@id/emaillL" android:layout_centerInParent="true" style="@style/user_person_data_submit" />
        <Button android:textColor="@color/white" android:id="@id/cancel_btn" android:background="@drawable/read_btn" android:visibility="2" android:layout_marginTop="15dp" android:text="@string/Cancel" android:layout_below="@id/registerbtn" android:layout_alignParentRight="true" style="@style/user_person_data_submit" />
    </RelativeLayout>
</ScrollView>
