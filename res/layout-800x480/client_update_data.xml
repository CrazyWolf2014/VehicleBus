<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="-1" android:layout_height="-1">
    <include android:id="@id/top" android:layout_width="-1" android:layout_height="45dp" layout="@layout/customer_managerment" />
    <RelativeLayout android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="-1" android:layout_height="-2" android:layout_below="@id/top">
        <ImageView android:id="@id/toright" android:background="@drawable/jiantou_left" android:layout_width="30dp" android:layout_height="30dp" android:contentDescription="@keyrecord/OWNER_USER" />
        <TextView android:textSize="20sp" android:textColor="@color/red" android:id="@id/update_client" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="10dp" android:text="@string/update_client" android:layout_below="@id/toright" />
        <EditText android:id="@id/first_name" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="5dp" android:hint="@string/first_name" android:singleLine="true" android:layout_below="@id/update_client" />
        <EditText android:id="@id/last_name" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="5dp" android:hint="@string/last_name" android:singleLine="true" android:layout_below="@id/first_name" />
        <EditText android:id="@id/phone_number" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="10dp" android:hint="@string/phone_number" android:singleLine="true" android:layout_below="@id/last_name" />
        <LinearLayout android:orientation="0" android:id="@id/register" android:layout_width="-1" android:layout_height="-2" android:layout_below="@id/phone_number">
            <EditText android:id="@id/verification_code" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="10dp" android:hint="@string/verification_code" android:singleLine="true" android:layout_weight="1.0" />
            <Button android:textColor="@color/gray" android:id="@id/get_verification_code" android:background="@drawable/item_bg" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:hint="@string/get_verification_code" android:singleLine="true" android:layout_weight="1.0" />
        </LinearLayout>
        <Button android:textColor="@color/white" android:id="@id/register_ok" android:background="@drawable/red_btn_bg" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="10dp" android:text="@string/countersign" android:layout_below="@id/register" android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>
