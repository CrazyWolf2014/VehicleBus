<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="-1" android:layout_height="-2">
    <RelativeLayout android:background="@color/black" android:layout_width="-1" android:layout_height="-1"
        <RelativeLayout android:id="@id/main_head" android:background="@drawable/top_bg" android:layout_width="-1" android:layout_height="40dp">
            <ImageView android:id="@id/flagImage" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:src="@drawable/top_flag" android:scaleType="3" android:layout_centerInParent="true" android:contentDescription="@keyrecord/OWNER_USER" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="-1" android:layout_height="-2" android:layout_below="@id/main_head" android:layout_centerHorizontal="true"
            <RelativeLayout android:layout_width="-1" android:layout_height="-1" android:layout_marginLeft="30dp" android:layout_marginTop="10dp" android:layout_marginRight="30dp">
                <TextView android:textSize="15sp" android:textColor="@color/red" android:id="@id/reg_title" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="25dp" android:text="@string/data_title" />
                <RelativeLayout android:id="@id/account" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="10dp" android:hint="@string/data_sex" android:singleLine="true" android:layout_below="@id/reg_title">
                    <TextView android:textSize="18sp" android:id="@id/account_sex" android:layout_width="-2" android:layout_height="-2" android:hint="@string/data_sex" android:layout_centerVertical="true" />
                    <RadioGroup android:gravity="10" android:orientation="0" android:id="@id/sexgroup" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="-2" android:checkedButton="@id/sex1" android:layout_toRightOf="@id/account_sex" android:layout_centerVertical="true">
                        <RadioButton android:textColor="@color/black" android:id="@id/sex1" android:layout_width="-2" android:layout_height="-1" android:checked="true" android:button="@drawable/checkbox" android:text="@string/data_sex1" />
                        <RadioButton android:textColor="@color/black" android:id="@id/sex2" android:layout_width="-2" android:layout_height="-1" android:button="@drawable/checkbox" android:text="@string/data_sex2" />
                    </RadioGroup>
                </RelativeLayout>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:gravity="10" android:id="@id/account_name" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="10dp" android:hint="@string/data_birth" android:singleLine="true" android:phoneNumber="true" android:layout_below="@id/account" />
                <EditText android:id="@id/pwd" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="10dp" android:hint="@string/data_phone" android:singleLine="true" android:phoneNumber="true" android:layout_below="@id/account_name" />
                <EditText android:id="@id/regpwd" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="10dp" android:hint="@string/data_address" android:singleLine="true" android:layout_below="@id/pwd" />
                <EditText android:id="@id/e_mail" android:background="@drawable/item_bg" android:paddingLeft="10dp" android:layout_width="-1" android:layout_height="30dp" android:layout_marginTop="10dp" android:hint="@string/data_email" android:singleLine="true" android:layout_below="@id/regpwd" />
                <CheckBox android:textSize="20sp" android:textColor="@color/white" android:id="@id/check" android:layout_width="-2" android:layout_height="-2" android:layout_marginRight="5dp" android:text="@string/if_port_affirm" android:layout_below="@id/e_mail" android:layout_centerHorizontal="true" android:layout_centerVertical="true" />
                <Button android:textColor="@color/white" android:id="@id/registerbtn" android:background="@drawable/red_btn_bg" android:layout_width="-2" android:layout_height="50dp" android:layout_marginTop="15dp" android:text="@string/data_btn" android:layout_below="@id/check" android:layout_centerHorizontal="true" android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
