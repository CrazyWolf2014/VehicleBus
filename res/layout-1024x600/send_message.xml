<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="1" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="-1" android:layout_height="100dp"
    <LinearLayout android:gravity="10" android:orientation="0" android:layout_width="-1" android:layout_height="20dp" android:layout_marginTop="20dp">
        <TextView android:textSize="20sp" android:textColor="@color/red" android:layout_width="-2" android:layout_height="-2" android:text="@string/send_message_text" />
    </LinearLayout>
    <LinearLayout android:orientation="0" android:layout_width="-1" android:layout_height="-2">
        <ImageView android:background="@drawable/line" android:layout_width="-1" android:layout_height="2dp" />
    </LinearLayout>
    <LinearLayout android:gravity="10" android:orientation="0" android:layout_width="-1" android:layout_height="-2">
        <EditText android:textSize="15sp" android:textColor="@color/black" android:background="@drawable/reg_ed" android:paddingLeft="10dp" android:layout_width="200dp" android:layout_height="20dp" android:layout_marginTop="5dp" android:hint="@string/send_message_email" />
        <Button android:textSize="12sp" android:textColor="@color/white" android:id="@id/send" android:background="@drawable/send_btn" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:text="@string/send_message_send" />
        <Button android:textSize="12sp" android:textColor="@color/white" android:id="@id/cancel" android:background="@drawable/send_canel" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>
