<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="11" android:orientation="1" android:background="@drawable/bg_radius" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="-1" android:layout_height="-1">
    <RelativeLayout android:gravity="11" android:layout_width="-1" android:layout_height="-2"
        <RelativeLayout android:id="@id/layout_top" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="45dp">
            <Button android:textColor="@color/white" android:gravity="11" android:id="@id/returnBtn" android:background="@drawable/findpwd_back" android:paddingLeft="5dp" android:paddingRight="2dp" android:layout_width="-2" android:layout_height="-2" android:text="@string/bluetooth_back" android:layout_alignParentLeft="true" />
            <Button android:id="@id/closeBtn" android:background="@drawable/main_close" android:layout_width="15dp" android:layout_height="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/login_content" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_below="@id/layout_top" android:layout_centerInParent="true">
            <ScrollView android:layout_width="-1" android:layout_height="-2">
                <TableLayout android:id="@id/dictTable" android:layout_width="-1" android:layout_height="-2" android:stretchColumns="1" android:collapseColumns="1">
                    <LinearLayout android:layout_width="-2" android:layout_height="-2">
                        <TextView android:textColor="#ffffff" android:gravity="5" android:layout_gravity="10" android:id="@id/ACCOUNT" android:visibility="2" android:layout_width="-2" android:layout_height="-2" android:layout_marginRight="10dp" android:minWidth="160dp" android:text="@string/reg_account" android:layout_weight="1.0" />
                        <EditText android:id="@id/account" android:background="@drawable/item_bg" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:hint="@string/reg_account" android:singleLine="true" android:maxLength="21" android:drawableRight="@drawable/rule_not_null" android:layout_weight="1.0" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="10dp">
                        <TextView android:textColor="#ffffff" android:gravity="5" android:layout_gravity="10" android:id="@id/PWD" android:visibility="2" android:layout_width="-2" android:layout_height="-2" android:layout_marginRight="10dp" android:minWidth="160dp" android:text="@string/login_pwd" android:maxLength="17" android:layout_weight="1.0" />
                        <EditText android:gravity="10" android:layout_gravity="10" android:id="@id/pwd" android:background="@drawable/item_bg" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:hint="@string/reg_pwd" android:singleLine="true" android:drawableRight="@drawable/rule_not_null" android:layout_weight="1.0" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="10dp">
                        <TextView android:textColor="#ffffff" android:gravity="5" android:layout_gravity="10" android:id="@id/REGPWD" android:visibility="2" android:layout_width="-2" android:layout_height="-2" android:layout_marginRight="10dp" android:minWidth="160dp" android:text="@string/reg_affirm_pwd" android:layout_weight="1.0" />
                        <EditText android:id="@id/regpwd" android:background="@drawable/item_bg" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:hint="@string/reg_affirm_pwd" android:singleLine="true" android:maxLength="17" android:drawableRight="@drawable/rule_not_null" android:layout_weight="1.0" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="10dp">
                        <TextView android:textColor="#ffffff" android:gravity="5" android:layout_gravity="10" android:id="@id/EMAIL" android:visibility="2" android:layout_width="-2" android:layout_height="-2" android:layout_marginRight="10dp" android:minWidth="160dp" android:text="@string/reg_email" android:layout_weight="1.0" />
                        <EditText android:id="@id/email" android:background="@drawable/item_bg" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:hint="@string/reg_email" android:singleLine="true" android:drawableRight="@drawable/rule_not_null" android:layout_weight="1.0" />
                    </LinearLayout>
                    <EditText android:id="@id/reg_name" android:background="@drawable/item_bg" android:visibility="2" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:layout_marginTop="10dp" android:hint="@string/register_name" android:singleLine="true" android:maxLength="21" android:layout_weight="1.0" />
                    <EditText android:gravity="10" android:layout_gravity="10" android:id="@id/reg_sex" android:background="@drawable/item_bg" android:visibility="2" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:layout_marginTop="10dp" android:hint="@string/register_sex" android:singleLine="true" android:layout_weight="1.0" />
                    <EditText android:id="@id/reg_birthday" android:background="@drawable/item_bg" android:visibility="2" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:layout_marginTop="10dp" android:hint="@string/register_birthday" android:singleLine="true" android:maxLength="17" android:layout_weight="1.0" />
                    <EditText android:id="@id/reg_phonenum" android:background="@drawable/item_bg" android:visibility="2" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:layout_marginTop="10dp" android:hint="@string/register_phonenum" android:singleLine="true" android:layout_weight="1.0" />
                    <EditText android:id="@id/reg_mobile_phone" android:background="@drawable/item_bg" android:visibility="2" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:layout_marginTop="10dp" android:hint="@string/register_mobilephone" android:singleLine="true" android:layout_weight="1.0" />
                    <EditText android:id="@id/reg_company_name" android:background="@drawable/item_bg" android:visibility="2" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:layout_marginTop="10dp" android:hint="@string/register_company_name" android:singleLine="true" android:layout_weight="1.0" />
                    <EditText android:id="@id/reg_address" android:background="@drawable/item_bg" android:visibility="2" android:layout_width="-1" android:layout_height="30dp" android:layout_marginLeft="3dp" android:layout_marginTop="10dp" android:hint="@string/register_address" android:singleLine="true" android:layout_weight="1.0" />
                </TableLayout>
            </ScrollView>
            <RelativeLayout android:id="@id/login_relaout" android:visibility="2" android:layout_width="-1" android:layout_height="-2"
                <RelativeLayout android:id="@id/login_layout" android:paddingTop="5dp" android:layout_width="-1" android:layout_height="-2" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                    <RelativeLayout android:id="@id/tishi" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="20dp"
                        <RelativeLayout android:id="@id/pwdresetLayout" android:layout_width="-2" android:layout_height="-2" android:minHeight="40dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                        <RelativeLayout android:paddingRight="5dp" android:layout_width="-1" android:layout_height="-2" android:layout_toLeftOf="@id/pwdresetLayout" android:layout_alignParentLeft="true" android:layout_centerVertical="true" /> />
                    <LinearLayout android:gravity="10" android:layout_gravity="10" android:layout_width="-2" android:layout_height="-2" android:layout_marginBottom="10dp" android:layout_below="@id/tishi" android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <Button android:textColor="@color/white" android:id="@id/registerbtn" android:background="@drawable/red_btn_bg" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="5dp" android:layout_marginBottom="50dp" android:text="@string/registerbtn" android:layout_below="@id/login_content" android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
